{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "incremental": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@src": [
        "src"
      ],
      "@libs/config": [
        "libs/config"
      ],
      "@libs/config/*": [
        "libs/config/*"
      ]
    },
    "esModuleInterop": true
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts",
    "libs/**/*.ts",
  ],
  "exclude": [
    "prisma/node_modules",
    "dist",
    "prisma/node_modules",
    "**.spec.ts",
  ]
}